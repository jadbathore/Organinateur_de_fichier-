{% extends "base.html.twig" %}
{% block body %}
<h1 class="m-3">contenu de la directory : {{path}} </h1>
<div class="w-75 m-auto">
<table class="table table-dark  mt-5">
<tr>
    <th class="col fs-4 p-3">Type de contenu</th>
    <th class="col fs-4 p-3" >contenu de premier niveau</th>
    <th class="col fs-4 p-3">contenu de deuxieme niveau</th>
    
</tr>

{% for download in content_downloads %}
<tr>
    <td>{{ download.type }}</td>
    <td>{{ download.file }}</td>
    <td>
        <ul>
        {% for sub_file in download.sub_file%}
            <li>{{sub_file}}</li>
        {% endfor %}
        </ul>
    </td>
</tr>
{% endfor %}
</table>
<form class="d-flex flex-row-reverse bd-highlight m-5 " action="index.php" method="post">
<input class="btn btn-primary fs-5" type="submit" name="sub" value=">Ranger les fichiers">
</form>
</div>
{% endblock %}